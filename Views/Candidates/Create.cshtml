@model CandidateVM
@{
    ViewData["Title"] = "Create";
}

<form asp-action="Create" enctype="multipart/form-data" method="post">
    <div class="row">
        <div class="col-6">
            <h2 class="display-6 ">Add New Candidate</h2>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row mb-2">
                <label asp-for="CandidateName" class="col-form-label col-3"></label>
                <div class="col-7">
                    <input asp-for="CandidateName" class="form-control form-control-sm" />
                </div>
                <div class="col-3">
                    <span asp-validation-for="CandidateName" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-2">
                <label asp-for="dateofBirth" class="col-form-label col-3"></label>
                <div class="col-7">
                    <input asp-for="dateofBirth" type="date" class="form-control form-control-sm" />
                </div>
                <div class="col-3">
                    <span asp-validation-for="dateofBirth" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-2">
                <label asp-for="Phone" class="col-form-label col-3"></label>
                <div class="col-7">
                    <input asp-for="Phone" class="form-control form-control-sm" />
                </div>
                <div class="col-3">
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-2">
                <label asp-for="ImagePath" class="col-form-label col-3"></label>
                <div class="col-7">
                    <input asp-for="ImagePath" type="file" class="form-control form-control-sm" />
                </div>
                <div class="col-3">
                    <span asp-validation-for="ImagePath" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-2">
                <label asp-for="Fresher" class="col-form-label col-3"></label>
                <div class="col-7 form-check">
                    <label class="form-check-label">
                        @Html.CheckBoxFor(x=>x.Fresher)
                    </label>
                </div>
                <div class="col-3">
                    <span asp-validation-for="CandidateName" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="col-6">
            <h2 class="display-5">Skills</h2>
            <div class="d-flex justify-content-end">
                <a id="btnplus" class="btn btn-primary btn-sm mt-2">Add More</a>
            </div>
            <div id="skillContainer">
                <script>
                    LoadData();
                </script>
            </div>
        </div>
    </div>
    <div class="d-flex justify-content-end">
        <input  type="submit" value="Save" class="btn btn-primary"/>
    </div>
</form>
<div >
    <a asp-action="Index" asp-controller="Candidates" class="btn btn-link btn-sm">Back to list </a>
</div>

